# Unix
alias bbb='. ~/.bash_profile'
alias bbe='vim ~/.dotfiles/bash/aliases'
alias ll='ls -ltrhG'
alias lla='ls -ltrAhG'
alias l='ls -1trG'
alias md='mkdir -p'
alias s='cd ..'
alias ss='cd ..; cd ..'
alias sss='cd ..; cd ..; cd ..'

# Vim
alias v='vim -p'
vg(){
    ft=${2:-"*"}
    vim -p +/$1 `git grep "$1" | awk -F ':' '{print $1}' | sort | uniq -c | sort -rn | awk '{print $2}' | egrep "*.$ft"`
}

# open git status m-files in vim
alias gv='vim -p `git ls-files -m`'
# Git
alias gc='git commit'
alias gap='git add -p'
alias gr='git grep'

# Commit pending changes and quote all args as message
function gg() {
    git commit -avm "$*"
}
alias gco='git checkout'
alias gd='git diff'
alias gl='git log'
alias gu='git pull --rebase'
alias gp='git push'
alias g='git status'

vcprompt ()
{
    local b="$(git symbolic-ref HEAD 2>/dev/null)";
    if [ -n "$b" ]; then
        local branch=${b##refs/heads/};

        if [ "$branch" = "master" ]; then
            printf "%s " "m";
        else
            printf "%s " $branch;
        fi
    fi
}
