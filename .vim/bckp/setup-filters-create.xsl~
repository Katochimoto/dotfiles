<xsl:template match="setup-filters-create" mode="block-content">
    <xsl:variable name="filter" select="/page/filters/body/action[id = /page/page-params/id]" />
    <xsl:variable name="conditions" select="$filter/conditions/item[field != 'att' and field != 'nospam' and field != 'clearspam' and field != 'all']"/>
    <xsl:variable name="message" select="/page/message"/>
    <div class="b-setup">
        <div class="b-setup__inner">
            <form class="b-setup__form daria-form">
                <xsl:attribute name="action">
                    <xsl:choose>
                        <xsl:when test="$filter">filters.edit</xsl:when>
                        <xsl:otherwise>filters.add</xsl:otherwise>
                    </xsl:choose>
                </xsl:attribute>

                <input type="hidden" name="fid" value="{$filter/id}" />
                <input type="hidden" name="filter_name">
                    <xsl:attribute name="value">
                        <xsl:choose>
                            <xsl:when test="string($filter/rule_name)">
                                <xsl:value-of select="$filter/rule_name"/>
                            </xsl:when>
                            <xsl:otherwise>Моё правило</xsl:otherwise>
                        </xsl:choose>
                    </xsl:attribute>
                </input>

                <xsl:apply-templates select="/" mode="setup-title-breadcrumbs">
                    <xsl:with-param name="item-id">
                        <xsl:choose>
                            <xsl:when test="$filter">filters-edit</xsl:when>
                            <xsl:otherwise>filters-create</xsl:otherwise>
                        </xsl:choose>
                    </xsl:with-param>
                </xsl:apply-templates>

                <div class="b-form-layout">

                    <div class="b-form-layout__block">
                        <div class="b-form-layout__field">
                            <div class="b-form-layout__line">
                                <span class="b-form-element b-form-element_selects-as-text">
                                    <span class="b-form-element__select b-form-element__select_selected-as-text">
                                        <span class="b-form-layout__text">
                                            <xsl:text>Применять </xsl:text>
                                            <span class="b-form-element__select__text">
                                                <xsl:apply-templates select="." mode="filters-logic-label"/>
                                                <xsl:text>&#160;</xsl:text>
                                                <span class="b-pseudo-link daria-action" action="filters.show-filters-create-logic">изменить</span>
                                            </span>
                                        </span>

                                        <select class="b-form-element__select__select" name="letter">
                                            <xsl:apply-templates select="/page/filters/filters-data/logic/item"
                                                                 mode="filters-logic"/>
                                        </select>
                                        <xsl:text>&#160;</xsl:text>
                                        <select class="b-form-element__select__select" name="attachment">
                                            <xsl:apply-templates select="/page/filters/filters-data/attachment/item"
                                                                 mode="filters-attachment"/>
                                        </select>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>


                    <div class="b-form-layout__block">
                        <div class="b-form-layout__field">
                            <div class="b-form-layout__line">
                                <div class="b-form-layout__title">Если</div>
                            </div>
                        </div>
                        <div>
                            <xsl:attribute name="class">
                                <xsl:text>b-form-layout__field</xsl:text>
                                <xsl:if test="count($conditions) &lt;= 1 and not($message)"> b-form-layout__field_show-one-mode</xsl:if>
                            </xsl:attribute>

                            <div class="b-form-layout__line b-form-layout__line_show-after-clone">
                                <span class="b-form-element" onclick="">
                                    <span class="b-form-element__select">
                                        <select class="b-form-element__select__select" name="logic">
                                            <!-- И или ИЛИ -->
                                            <xsl:variable name="logic">
                                                <xsl:choose>
                                                    <!-- Для фильтра "по письму" - И -->
                                                    <xsl:when test="$message">
                                                        <xsl:text>1</xsl:text>
                                                    </xsl:when>
                                                    <!-- При редактировании фильтра - его логику -->
                                                    <xsl:when test="$filter">
                                                        <xsl:value-of select="$filter/conditions/item[pattern/text()]/cond_link"/>
                                                    </xsl:when>
                                                    <!-- Для нового фильтра - ИЛИ -->
                                                    <xsl:otherwise>
                                                        <xsl:text>0</xsl:text>
                                                    </xsl:otherwise>
                                                </xsl:choose>
                                            </xsl:variable>
                                            <xsl:apply-templates select="/page/filters/filters-data/and-or/item" mode="filters-and-or">
                                                <xsl:with-param name="logic" select="$logic"/>
                                            </xsl:apply-templates>
                                        </select>
                                    </span>
                                </span>
                            </div>

                            <xsl:choose>
                                <xsl:when test="$filter">
                                    <xsl:for-each select="$conditions">
                                        <xsl:variable name="custom" select="field != 'subject' and field != 'from' and field != 'to' and field != 'cc' and field != 'body' and field != 'filename'"/>

                                        <xsl:apply-templates select="/" mode="filters-condition">
                                            <xsl:with-param name="custom" select="$custom"/>
                                            <xsl:with-param name="condition" select="."/>
                                            <xsl:with-param name="condition-field1" select="./field"/>
                                            <xsl:with-param name="condition-field2" select="./oper_id"/>
                                            <xsl:with-param name="condition-field3" select="./pattern"/>
                                        </xsl:apply-templates>
                                    </xsl:for-each>
                                </xsl:when>
                                <xsl:when test="$message">
                                    <xsl:apply-templates select="/" mode="filters-condition">
                                        <xsl:with-param name="condition-field1" select="'from'"/>
                                        <xsl:with-param name="condition-field3" select="$message/from/email"/>
                                    </xsl:apply-templates>
                                    <xsl:apply-templates select="/" mode="filters-condition">
                                        <xsl:with-param name="condition-field1" select="'subject'"/>
                                        <xsl:with-param name="condition-field3" select="$message/subject"/>
                                    </xsl:apply-templates>
                                </xsl:when>
                                <xsl:otherwise>
                                    <xsl:apply-templates select="/" mode="filters-condition"/>
                                </xsl:otherwise>
                            </xsl:choose>

                            <div class="b-form-layout__line">
                                <a href="" class="b-form-layout__clone-line daria-action" action="filters.add-condition" >
                                    <xsl:text>Добавить условие</xsl:text>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="b-form-layout__block b-form-layout__block_settings-filter">
                        <div class="b-form-layout__title">Выполнить действие</div>

                        <xsl:apply-templates select="/page/filters/filters-data/actions/item[not(@req-pass='yes')]" mode="filters-action">
                            <xsl:with-param name="filter" select="$filter"/>
                        </xsl:apply-templates>
                    </div>

                    <div class="b-form-layout__block b-form-layout__block_settings-filter">
                        <!--div class="b-form-layout__line">
                            <span class="b-form-layout__text">
                                <xsl:text>При активации правил пересылки писем потребуется ввести пароль. </xsl:text>
                                <span class="b-pseudo-link daria-action" action="filters.enable-forwarding-options">Продолжить</span>
                            </span>
                        </div-->
                        <xsl:apply-templates select="/page/filters/filters-data/actions/item[@req-pass='yes']" mode="filters-action">
                            <xsl:with-param name="filter" select="$filter"/>
                            <!--xsl:with-param name="disabled" select="true()"/-->
                        </xsl:apply-templates>
                    </div>

                    <div class="b-form-layout__block b-form-layout__block_settings-filter">
                        <div class="b-form-layout__line">
                            <div class="b-form-layout__field">
                                <span class="b-form-element" onclick="">
                                    <span class="b-form-element__checkbox">
                                        <label>
                                            <input type="checkbox" class="b-form-element__checkbox__input" name="stop" value="on" >
                                                <xsl:apply-templates select="$filter[stop = 'yes']" mode="checked"/>
                                            </input>
                                            <xsl:text>Не применять остальные правила</xsl:text>
                                        </label>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>

                </div>

                <span class="b-mail-button b-mail-button_round">
                    <input type="submit" class="b-mail-button__button">
                        <xsl:attribute name="value">
                            <xsl:choose>
                                <xsl:when test="$filter">Изменить правило</xsl:when>
                                <xsl:otherwise>Создать правило</xsl:otherwise>
                            </xsl:choose>
                        </xsl:attribute>
                    </input>
                </span>
                <a href="#setup/filters">Отмена</a>
            </form>
        </div>
    </div>
</xsl:template>

<!-- Все радио, кроме ответить -->
<xsl:template match="item" mode="filters-action">
    <xsl:param name="filter"/>
    <xsl:param name="disabled"/>

    <xsl:variable name="dependence-id" select="concat(@id, '_', generate-id(.))"/>

    <div class="b-form-layout__line">
        <!-- Сам радио -->
        <div class="b-form-layout__field b-form-layout__field_size_14em">
            <span>
                <xsl:attribute name="class">
                    <xsl:text>b-form-element</xsl:text>
                    <xsl:if test="$disabled">
                        <xsl:text> b-form-element_disabled</xsl:text>
                    </xsl:if>
                </xsl:attribute>
                <span class="b-form-element__radio">
                    <label>
                        <input type="radio" name="cliker" value="{@id}" dependence-parent-id="{$dependence-id}"
                               class="b-form-element__radio__input daria-dependence-parent" >
                            <xsl:attribute name="class">
                                <xsl:text>b-form-element__radio__input daria-dependence-parent</xsl:text>
                                <xsl:if test="$disabled">
                                    <xsl:text> daria-dependence-child</xsl:text>
                                </xsl:if>
                            </xsl:attribute>
                            <xsl:if test="$disabled">
                                <xsl:attribute name="disabled">disabled</xsl:attribute>
                                <xsl:attribute name="dependence-child-id">passwd</xsl:attribute>
                            </xsl:if>
                            <xsl:apply-templates select="." mode="filters-action-checked" />
                        </input>
                        <xsl:value-of select="label"/>
                    </label>
                </span>
            </span>
        </div>
        <!-- Зависимый контрол, если нужен -->
        <xsl:apply-templates select="." mode="filters-action-input">
            <xsl:with-param name="filter" select="$filter"/>
            <xsl:with-param name="disabled" select="$disabled"/>
            <xsl:with-param name="dependence-id" select="$dependence-id"/>
        </xsl:apply-templates>
    </div>
</xsl:template>

<!-- Радио ответить -->
<xsl:template match="item[@id = 'reply']" mode="filters-action">
    <xsl:param name="filter"/>

    <div class="b-form-layout__line">
        <div class="b-form-element">
            <span class="b-form-element__radio">
                <label>
                    <input type="radio" name="cliker" value="reply" dependence-parent-id="{@id}" dependence-child-id="reply"
                           class="b-form-element__radio__input daria-dependence-parent">
                        <!--xsl:attribute name="disabled">disabled</xsl:attribute-->
                        <xsl:apply-templates select="." mode="filters-action-checked" />
                    </input>
                    <xsl:text>Ответить следующим текстом</xsl:text>
                </label>
            </span>
        </div>
    </div>
    <div class="b-form-layout__line b-form-layout__line_checkbox">
        <div class="b-form-layout__field">
            <span class="b-form-element b-form-element_disabled">
                <textarea disabled="disabled" name="autoanswer" dependence-child-id="{@id}"
                        class="b-form-element__textarea daria-dependence-child">
                    <xsl:apply-templates select="." mode="filters-action-input-disabled" />
                    <xsl:if test="$filter/action = 'reply'">
                        <xsl:value-of select="$filter/param"/>
                    </xsl:if>
                </textarea>
            </span>
        </div>
    </div>
</xsl:template>

<xsl:template match="item" mode="filters-action-checked"/>

<xsl:template match="item[/page/filters/body/action[id = /page/page-params/id]/action = @id]" mode="filters-action-checked">
    <xsl:attribute name="checked">checked</xsl:attribute>
</xsl:template>

<xsl:template match="item[not(/page/page-params/id) and @id='move']" mode="filters-action-checked">
    <xsl:attribute name="checked">checked</xsl:attribute>
</xsl:template>

<xsl:template match="item[/page/filters/body/action[id = /page/page-params/id]/action = 'forwardwithstore' and @id = 'forward']" mode="filters-action-checked">
    <xsl:attribute name="checked">checked</xsl:attribute>
</xsl:template>

<xsl:template match="item[
                        /page/filters/body/action[id = /page/page-params/id]/param = 'lid_read' and
                        @id = 'movel' and
                        not(@param = 'noselect')]" mode="filters-action-checked" />

<xsl:template match="item[
                        not(/page/filters/body/action[id = /page/page-params/id]/param = 'lid_read') and
                        @id = 'movel' and
                        @param = 'noselect']" mode="filters-action-checked" />

<xsl:template match="item" mode="filters-action-input-disabled">
    <xsl:attribute name="disabled">disabled</xsl:attribute>
</xsl:template>

<!-- На форме создания фильртра не дизейблим "Положить в папку" -->
<xsl:template match="item[not(/page/page-params/id) and @id='move']" mode="filters-action-input-disabled"/>

<!-- Не дизейблим, если это то действие, которое указано в фильтре  -->
<xsl:template match="item[/page/filters/body/action[id = /page/page-params/id]/action = @id]" mode="filters-action-input-disabled"/>

<!-- Не дизейблим действие forward, если в фильтре экшен forwardwithstore -->
<xsl:template match="item[/page/filters/body/action[id = /page/page-params/id]/action = 'forwardwithstore' and @id = 'forward']" mode="filters-action-input-disabled"/>

<!-- Дизейблим селект с метками, если действие "отметить прочитанными" -->
<xsl:template match="item[
                        /page/filters/body/action[id = /page/page-params/id]/action = 'movel' and
                        /page/filters/body/action[id = /page/page-params/id]/param = 'lid_read' and
                        @id = 'movel' and
                        not(@param = 'noselect')]" mode="filters-action-input-disabled">
    <xsl:attribute name="disabled">disabled</xsl:attribute>
</xsl:template>

<xsl:template match="item[
                        /page/filters/body/action[id = /page/page-params/id]/action = 'movel' and
                        not(/page/filters/body/action[id = /page/page-params/id]/param = 'lid_read') and
                        @id = 'movel' and
                        @param = 'noselect']" mode="filters-action-input-disabled">
    <xsl:attribute name="disabled">disabled</xsl:attribute>
</xsl:template>

<!-- Зависимые контролы -->
<xsl:template match="item" mode="filters-action-input" />

<!-- Зависимый контрол "Переложить в папку" -->
<xsl:template match="item[@id = 'move']" mode="filters-action-input">
    <xsl:param name="filter" select="."/>
    <xsl:param name="dependence-id"/>

    <div class="b-form-layout__field">
        <span class="b-form-element">
            <span class="b-form-element__select">
                <select class="b-form-element__select__select daria-dependence-child folders-select"
                        dependence-child-id="{$dependence-id}" name="move_folder">
                    <xsl:apply-templates select="." mode="filters-action-input-disabled" />
                    <xsl:for-each select="/page/folders/folder">
                        <option value="{name}" class="b-form-element__option">
                            <xsl:if test="name = $filter/param">
                                <xsl:attribute name="selected">selected</xsl:attribute>
                            </xsl:if>
                            <xsl:value-of select="name"/>
                        </option>
                    </xsl:for-each>
                    <option value="new_folder" class="b-form-element__option">Новая папка…</option>
                </select>
            </span>
        </span>
    </div>
</xsl:template>

<!-- Зависимый контрол "Присвоить метку" -->
<xsl:template match="item[@id = 'movel']" mode="filters-action-input">
    <xsl:param name="filter" select="."/>
    <xsl:param name="dependence-id"/>

    <div class="b-form-layout__field">
        <span class="b-form-element">
            <span class="b-form-element__select">
                <select class="b-form-element__select__select daria-dependence-child labels-select"
                        dependence-child-id="{$dependence-id}" name="move_label">
                    <xsl:apply-templates select="." mode="filters-action-input-disabled" />
                    <option value="priority_high" class="b-filters-select__option" action="labels.add">Важные</option>
                    <xsl:for-each select="/page/labels/label[user]">
                        <option value="{name}" class="b-form-element__option">
                            <!-- FIXME: Сделать выбор для "Важные" и "Прочтенное" -->
                            <xsl:if test="@id = $filter/param">
                                <xsl:attribute name="selected">selected</xsl:attribute>
                            </xsl:if>
                            <xsl:value-of select="name"/>
                        </option>
                    </xsl:for-each>
                    <option value="new_label" class="b-form-element__option">Новая метка…</option>
                </select>
            </span>
        </span>
    </div>
</xsl:template>

<xsl:template match="item[@id = 'movel' and @param='noselect']" mode="filters-action-input">
