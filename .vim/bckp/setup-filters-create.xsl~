    <input type="hidden" value="lid_read" name="move_label" dependence-child-id="{$dependence-id}" class="daria-dependence-child">
        <xsl:apply-templates select="." mode="filters-action-input-disabled" />
    </input>
</xsl:template>

<xsl:template match="item[@id = 'forward' or @id='notify']" mode="filters-action-input">
    <xsl:param name="filter" select="."/>
    <xsl:param name="dependence-id"/>

    <div class="b-form-layout__field">
        <div class="b-form-layout__line">
            <span class="b-form-element b-form-element_disabled">
                <input type="text" name="{@id}_address" dependence-child-id="{$dependence-id}"
                       class="b-form-element__input-text daria-dependence-child">
                    <xsl:if test="$filter/action = @id or @id = 'forward' and $filter/action = 'forwardwithstore'">
                        <xsl:attribute name="value">
                            <xsl:choose>
                                <xsl:when test="$filter/action = 'forwardwithstore'">
                                    <xsl:value-of select="$filter/param"/>
                                </xsl:when>
                                <xsl:otherwise>
                                    <xsl:value-of select="$filter/param"/>
                                </xsl:otherwise>
                            </xsl:choose>
                        </xsl:attribute>
                    </xsl:if>
                    <xsl:apply-templates select="." mode="filters-action-input-disabled" />
                </input>
                <xsl:if test="@id = 'forward'">
                    <span class="b-form-element__checkbox b-form-element__checkbox_small">
                        <label>
                            <input type="checkbox" dependence-child-id="{$dependence-id}" name="forward_with_store"
                                   class="b-form-element__checkbox__input daria-dependence-child">
                                <xsl:apply-templates select="." mode="filters-action-input-disabled" />
                                <xsl:apply-templates select="$filter[action = 'forwardwithstore']" mode="checked"/>
                            </input>
                            <xsl:text>сохранить копию при пересылке</xsl:text>
                        </label>
                    </span>
                </xsl:if>

                <!-- Ошибка - введён тот же ящик для которого настраивается фильтр -->
                <span class="b-notification b-notification_error-self-address-{@id} g-hidden">
                    <span class="b-notification__i">
                        <img  title="" alt="[!]" class="b-mail-icon b-mail-icon_error"><xsl:attribute name="src"><xsl:value-of select="'&static;/blocks/b-mail-icon/_type/b-mail-icon_error.gif'"/></xsl:attribute></img>
                        <xsl:text>Нельзя создать правило с пересылкой на тот же адрес, на котором создается правило.</xsl:text>
                    </span>
                </span>
                <!-- Ошибка - неверный формат email-a -->
                <span class="b-notification b-notification_error-pattern-{@id} g-hidden">
                    <span class="b-notification__i">
                        <img  title="" alt="[!]" class="b-mail-icon b-mail-icon_error"><xsl:attribute name="src"><xsl:value-of select="'&static;/blocks/b-mail-icon/_type/b-mail-icon_error.gif'"/></xsl:attribute></img>
                        <xsl:text>Некорректный адрес электронной почты.</xsl:text>
                    </span>
                </span>
            </span>
        </div>
    </div>
</xsl:template>

<xsl:template match="/" mode="filters-condition" >
    <xsl:param name="custom"/>
    <xsl:param name="condition" select="."/>
    <xsl:param name="condition-field1"/>
    <xsl:param name="condition-field2" select="'1'"/>
    <xsl:param name="condition-field3"/>

    <div class="b-form-layout__line">
        <div class="b-form-layout__field">
            <span class="b-form-element">
                <span class="b-form-element__select">
                    <select  class="b-filters-select__select" name="field1">
                        <xsl:apply-templates select="//filters-data/fields/item" mode="filters-condition-fields" >
                            <xsl:with-param name="custom" select="$custom"/>
                            <xsl:with-param name="condition-field1" select="$condition-field1"/>
                        </xsl:apply-templates>
                    </select>
                </span>
                <xsl:text>&#160;</xsl:text>
                <span class="b-form-element__select">
                    <select  class="b-filters-select__select" name="field2">
                        <xsl:apply-templates select="//filters-data/conditions/item" mode="filters-fields-conditions" >
                            <xsl:with-param name="condition" select="$condition"/>
                            <xsl:with-param name="condition-field2" select="$condition-field2"/>
                        </xsl:apply-templates>
                    </select>
                </span>
            </span>
            <xsl:text>&#160;</xsl:text>
            <input type="text" name="field3" class="b-form-element__input-text" value="{$condition-field3}"/>
        </div>
        <xsl:text>&#160;</xsl:text>
        <span action="filters.delete-condition" class="b-form-layout__button b-form-layout__button_delete daria-action">
            <xsl:text>×</xsl:text>
        </span>


    </div>

</xsl:template>

<xsl:template match="/filters-condition-new">
    <xsl:apply-templates select="/" mode="filters-condition"/>
</xsl:template>

<xsl:template match="item" mode="filters-attachment">
    <xsl:variable name="filter" select="/page/filters/body/action[id = /page/page-params/id]"/>
    <xsl:variable name="item" select="."/>
    <option value="{@value}" class="b-filters-select__option">
        <xsl:if test="$filter/conditions/item[field = 'att']/oper_id = $item/@value">
            <xsl:attribute name="selected">selected</xsl:attribute>
        </xsl:if>

        <xsl:value-of select="label"/>
    </option>
</xsl:template>

<xsl:template match="item" mode="filters-logic">
    <xsl:variable name="filter" select="/page/filters/body/action[id = /page/page-params/id]"/>
    <xsl:variable name="item" select="."/>
    <option value="{@value}" class="b-filters-select__option">
        <xsl:if test="$filter/conditions/item[field = $item/@value]">
            <xsl:attribute name="selected">selected</xsl:attribute>
        </xsl:if>

        <xsl:value-of select="label"/>
    </option>
</xsl:template>

<xsl:template match="item" mode="filters-condition-fields">
    <xsl:param name="custom"/>
    <xsl:param name="condition-field1"/>

    <option value="{@value}" class="b-filters-select__option">
        <xsl:choose>
            <xsl:when test="@value = $condition-field1">
                <xsl:attribute name="selected">selected</xsl:attribute>
                <xsl:value-of select="."/>
            </xsl:when>
            <xsl:when test="$custom and @value = 'sender'">
                <xsl:attribute name="selected">selected</xsl:attribute>
                <xsl:attribute name="value"><xsl:value-of select="$condition-field1"/></xsl:attribute>
                <xsl:value-of select="concat('Заголовок &quot;', $condition-field1, '&quot;')"/>
            </xsl:when>
            <xsl:otherwise>
                <xsl:value-of select="."/>
            </xsl:otherwise>
        </xsl:choose>
    </option>
</xsl:template>

<xsl:template match="item" mode="filters-fields-conditions">
    <xsl:param name="condition-field2"/>
    <option value="{@value}" class="b-form-element__option">
        <xsl:if test="@value = $condition-field2">
            <xsl:attribute name="selected">selected</xsl:attribute>
        </xsl:if>
        <xsl:value-of select="."/>
    </option>
</xsl:template>

<xsl:template match="setup-filters-create[not(/page/filters/body/action[id = /page/page-params/id])]" mode="filters-logic-label">
    <xsl:value-of select="/page/filters/filters-data/logic/item[@value='nospam']/label" />
    <xsl:text>&#160;</xsl:text>
    <xsl:value-of select="/page/filters/filters-data/attachment/item[@value='']/label" />
</xsl:template>

<xsl:template match="setup-filters-create" mode="filters-logic-label">
    <xsl:variable name="filter" select="/page/filters/body/action[id = /page/page-params/id]"/>

    <xsl:variable name="logic">
        <xsl:choose>
            <xsl:when test="$filter/conditions/item[field = 'all']" >all</xsl:when>
            <xsl:when test="$filter/conditions/item[field = 'nospam']" >nospam</xsl:when>
            <xsl:otherwise >clearspam</xsl:otherwise>
        </xsl:choose>
    </xsl:variable>

    <xsl:variable name="att">
        <xsl:choose>
            <xsl:when test="$filter/conditions/item[field = 'att']" >
                <xsl:value-of select="$filter/conditions/item[field = 'att']/oper_id"/>
            </xsl:when>
            <xsl:otherwise></xsl:otherwise>
        </xsl:choose>
    </xsl:variable>

    <xsl:value-of select="/page/filters/filters-data/logic/item[@value = $logic]/label"/>
    <xsl:text>&#160;</xsl:text>
    <xsl:value-of select="/page/filters/filters-data/attachment/item[@value = $att]/label"/>

</xsl:template>

<xsl:template match="item" mode="filters-and-or">
    <xsl:param name="logic"/>

    <option value="{@value}" class="b-form-element__option">
        <xsl:if test="$logic = @value">
            <xsl:attribute name="selected">selected</xsl:attribute>
        </xsl:if>
        <xsl:value-of select="."/>
    </option>
</xsl:template>

<!-- Диалог для создания кастомного поля фильтра -->
<xsl:template match="filters-sender-create">
    <div class="b-popup__field b-popup__field_folder-new">
        <label class="b-popup__field__label">
            <xsl:text>Название заголовка (например - Sender):</xsl:text>
            <input class="b-popup__field__input" type="text" maxlength="30" value="{value}"/>
        </label>
    </div>
</xsl:template>

</xsl:stylesheet>

