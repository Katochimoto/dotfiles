<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->

<xsl:template match="setup-left" mode="block-content">
    <div class="b-folders">
        <xsl:apply-templates select="/page/setup-menu/*" mode="setup-left"/>
    </div>
</xsl:template>

<!-- Пункт меню -->
<xsl:template match="item[@type='menu']" mode="setup-left">
    <xsl:choose>
        <xsl:when test="@id='chat' and /page/config/pdd-domain"></xsl:when>
        <xsl:otherwise>
            <div class="b-folders__folder b-folders__folder-{@id}">
                <span class="b-folders__folder__name">
                    <a class="b-folders__folder__link" href="#setup/{@id}" >
                        <xsl:value-of select="@menu-name"/>
                    </a>
                </span>
            </div>
        </xsl:otherwise>
    </xsl:choose>
</xsl:template>

<!-- Разделитель -->
<xsl:template match="separator" mode="setup-left">
    <hr class="b-separator b-separator_dotted"/>
</xsl:template>

