# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

txt()
{
    find -L . -type f -not -name "*jane*.xsl" -name "${2:-*}" | xargs grep --color -n $1
}

dariak(){
    echo 'checkouting...'
    git clone ssh://git.yandex.ru/daria.git some_unique_name_for_temp_dir
    cd some_unique_name_for_temp_dir
    echo 'upping...'
    ./up
    echo 'making xsl...'
    ./make.sh
    echo 'making rpm...'
    make rpm 
    echo 'rpm releasing...'
    rpmrelease
    echo 'cleaning...'
    cd ../ 
    rm -rf some_unique_name_for_temp_dir
}

dariak_b(){
        echo 'checkouting...'
            git clone ssh://git.yandex.ru/daria.git some_unique_name_for_temp_dir
                cd bform
                git checkout b-form
                    echo 'upping...'
                        ./up
                            echo 'making xsl...'
                                ./make.sh
                                    echo 'making rpm...'
                                        make rpm 
                                            echo 'rpm releasing...'
                                                rpmrelease
                                                    echo 'cleaning...'
                                                        cd ../ 
                                                            rm -rf some_unique_name_for_temp_dir
                                                        }

loc(){
    locale=${2:-ru}
    out=${1/%.xsl/.$locale.xsl}
    out=${out/%.js/.$locale.js}
    perl -C tools/localize --input $1 --output $out --locale $locale
    ./make.sh
}
loce(){
    out=${1/%.xsl/.en.xsl}
    out=${out/%.js/.en.js}
    perl -C tools/localize --input $1 --output $out --locale en
    ./make.sh
}
# User specific environment and startup programs

PATH=$PATH:$HOME/bin

export PATH

EDITOR=vim
export EDITOR
